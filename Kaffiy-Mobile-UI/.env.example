# ========================================
# KAFFIY MOBILE APP ENVIRONMENT VARIABLES
# Copy this file to .env and fill in your values
# ========================================

# Supabase Configuration
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# Optional: For development
# VITE_SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# App Configuration
VITE_APP_NAME=Kaffiy
VITE_APP_VERSION=1.0.0

# API Configuration (if needed)
# VITE_API_BASE_URL=https://api.kaffiy.com

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_CRASH_REPORTING=false
VITE_ENABLE_DEBUG_MODE=true

# Map Configuration (for store locations)
VITE_DEFAULT_LATITUDE=41.0082
VITE_DEFAULT_LONGITUDE=28.9784
VITE_DEFAULT_ZOOM=10

# Push Notifications (if using)
# VITE_FCM_PUBLIC_KEY=your_fcm_public_key

# Social Login (if enabled)
# VITE_GOOGLE_CLIENT_ID=your_google_client_id
# VITE_FACEBOOK_APP_ID=your_facebook_app_id

# Analytics (if enabled)
# VITE_GA_TRACKING_ID=your_google_analytics_id
# VITE_MIXPANEL_TOKEN=your_mixpanel_token

# Development Settings
VITE_API_TIMEOUT=30000
VITE_RETRY_ATTEMPTS=3
VITE_CACHE_DURATION=300000

# Security
VITE_ENCRYPTION_KEY=your_encryption_key_for_sensitive_data
VITE_JWT_SECRET=your_jwt_secret_for_local_storage
