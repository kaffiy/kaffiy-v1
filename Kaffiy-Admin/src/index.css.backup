  }

  .dark[data-palette="mist"] {
    --primary: 210 12% 68%;
    --primary-foreground: 210 12% 12%;
    --accent: 210 12% 18%;
    --accent-foreground: 210 12% 80%;
    --ring: 210 12% 68%;
    --sidebar-primary: 210 12% 68%;
    --sidebar-primary-foreground: 210 12% 12%;
    --sidebar-ring: 210 12% 68%;
