@tailwind base;
@tailwind components;
@tailwind utilities;

@import url('https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;500;600;700&family=Inter:wght@300;400;500;600;700&family=Outfit:wght@600;700&display=swap');

@import url("https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap");

@import url("https://fonts.googleapis.com/css2?family=Libre+Caslon+Text:wght@400;700&display=swap");

@import url("https://fonts.googleapis.com/css2?family=Roboto+Mono:wght@400;700&display=swap");

@layer base {
  :root {
    /* Modern SaaS Theme - Cohesive Color System */
    --background: 0 0% 98%;
    --foreground: 210 10% 15%;

    --card: 0 0% 100%;
    --card-foreground: 210 10% 15%;

    --popover: 0 0% 100%;
    --popover-foreground: 210 10% 15%;

    /* Primary - Consistent Indigo Blue */
    --primary: 217 91% 60%;
    --primary-foreground: 0 0% 100%;

    /* Secondary - Light Gray */
    --secondary: 210 40% 96%;
    --secondary-foreground: 210 10% 15%;

    /* Muted - Subtle Gray */
    --muted: 210 40% 96%;
    --muted-foreground: 215 20% 65%;

    /* Accent - Light Indigo */
    --accent: 217 91% 95%;
    --accent-foreground: 217 91% 40%;

    /* Status Colors - Consistent Palette */
    --success: 142 76% 36%;
    --warning: 38 92% 50%;
    --destructive: 0 84% 60%;
    --destructive-foreground: 0 0% 98%;

    /* Borders - Consistent Gray */
    --border: 214 32% 91%;
    --input: 214 32% 91%;
    --ring: 217 91% 60%;

    --radius: 0.75rem;

    /* Sidebar - Clean White */
    --sidebar-background: 0 0% 100%;
    --sidebar-foreground: 210 10% 15%;
    --sidebar-primary: 217 91% 60%;
    --sidebar-primary-foreground: 0 0% 100%;
    --sidebar-accent: 210 40% 96%;
    --sidebar-accent-foreground: 210 10% 15%;
    --sidebar-border: 214 32% 91%;
    --sidebar-ring: 217 91% 60%;
    --sidebar-muted: 215 20% 65%;

    /* Extended Color Tokens - Consistent with Primary */
    --sage: 75 26% 48%;
    --sage-light: 75 20% 92%;
    --sage-muted: 75 18% 72%;
    --sage-dark: 75 30% 38%;
    --beige: 60 56% 91%;
    --beige-light: 60 50% 96%;
    --coffee: 30 39% 21%;
    --coffee-light: 30 25% 40%;
    --terracotta: 18 35% 58%;
    --terracotta-light: 15 45% 82%;
    --gold: 42 55% 55%;
    --gold-light: 42 45% 85%;
    --gold-foreground: 30 39% 15%;
    --warm-white: 60 60% 99%;

    /* Chart Colors - Consistent with Theme */
    --chart-1: 217 91% 60%;  /* Primary Indigo */
    --chart-2: 142 76% 36%;  /* Success Green */
    --chart-3: 38 92% 50%;   /* Warning Yellow */
    --chart-4: 0 84% 60%;    /* Destructive Red */
    --chart-5: 215 20% 65%;  /* Muted Gray */

    /* Modern shadows */
    --shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
    --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
    --shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
    --shadow-xl: 0 20px 25px -5px rgb(0 0 0 / 0.1), 0 8px 10px -6px rgb(0 0 0 / 0.1);
    --shadow-glow: 0 0 40px -10px rgba(99, 102, 241, 0.15);
    --sidebar: 0 0% 100%;
    --font-sans: 'Inter', ui-sans-serif, system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Helvetica Neue', Arial, 'Noto Sans', sans-serif;
    --font-serif: 'Libre Caslon Text', ui-serif, Georgia, Cambria, 'Times New Roman', Times, serif;
    --font-mono: 'JetBrains Mono', ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, 'Liberation Mono', 'Courier New', monospace;
  }

  .dark {
    --background: 210 10% 3%;
    --foreground: 210 10% 95%;

    --card: 210 10% 8%;
    --card-foreground: 210 10% 95%;

    --popover: 210 10% 8%;
    --popover-foreground: 210 10% 95%;

    --primary: 217 91% 60%;
    --primary-foreground: 210 10% 3%;

    --secondary: 210 40% 8%;
    --secondary-foreground: 210 10% 95%;

    --muted: 210 40% 8%;
    --muted-foreground: 215 20% 65%;

    --accent: 217 91% 15%;
    --accent-foreground: 217 91% 90%;

    --success: 142 76% 36%;
    --warning: 38 92% 50%;
    --destructive: 0 62% 30%;
    --destructive-foreground: 210 10% 95%;

    --border: 214 32% 16%;
    --input: 214 32% 16%;
    --ring: 217 91% 60%;

    --sidebar-background: 210 10% 8%;
    --sidebar-foreground: 210 10% 95%;
    --sidebar-primary: 217 91% 60%;
    --sidebar-primary-foreground: 210 10% 3%;
    --sidebar-accent: 210 40% 8%;
    --sidebar-accent-foreground: 210 10% 95%;
    --sidebar-border: 214 32% 16%;
    --sidebar-ring: 217 91% 60%;
    --sidebar-muted: 215 20% 65%;
  }
}
  :root[data-palette="sage"] {
    --primary: var(--sage);
    --primary-foreground: 60 60% 99%;
    --accent: var(--sage-light);
    --accent-foreground: var(--sage-dark);
    --ring: var(--sage);
    --sidebar-primary: var(--sage);
    --sidebar-primary-foreground: 60 60% 99%;
    --sidebar-ring: var(--sage);
  }

  :root[data-palette="charcoal"] {
    --primary: 0 0% 28%;
    --primary-foreground: 0 0% 98%;
    --accent: 0 0% 93%;
    --accent-foreground: 0 0% 30%;
    --ring: 0 0% 35%;
    --sidebar-primary: 0 0% 28%;
    --sidebar-primary-foreground: 0 0% 98%;
    --sidebar-ring: 0 0% 28%;
  }

  :root[data-palette="latte"] {
    --primary: 25 30% 55%;
    --primary-foreground: 35 60% 98%;
    --accent: 30 40% 92%;
    --accent-foreground: 25 30% 35%;
    --ring: 25 30% 55%;
    --sidebar-primary: 25 30% 55%;
    --sidebar-primary-foreground: 35 60% 98%;
    --sidebar-ring: 25 30% 55%;
  }

  :root[data-palette="sand"] {
    --primary: 38 35% 60%;
    --primary-foreground: 45 80% 97%;
    --accent: 40 45% 92%;
    --accent-foreground: 38 35% 35%;
    --ring: 38 35% 60%;
    --sidebar-primary: 38 35% 60%;
    --sidebar-primary-foreground: 45 80% 97%;
    --sidebar-ring: 38 35% 60%;
  }

  :root[data-palette="mist"] {
    --primary: 210 10% 55%;
    --primary-foreground: 210 30% 98%;
    --accent: 210 15% 92%;
    --accent-foreground: 210 12% 35%;
    --ring: 210 10% 55%;
    --sidebar-primary: 210 10% 55%;
    --sidebar-primary-foreground: 210 30% 98%;
    --sidebar-ring: 210 10% 55%;
  }

  .dark {
    --background: 0 0% 9%;
    --foreground: 0 0% 98%;
    --card: 0 0% 14%;
    --card-foreground: 0 0% 98%;
    --popover: 0 0% 25%;
    --popover-foreground: 0 0% 98%;
    --primary: 27 95% 60%;
    --primary-foreground: 12 81% 14%;
    --secondary: 0 0% 45%;
    --secondary-foreground: 0 0% 98%;
    --muted: 0 0% 45%;
    --muted-foreground: 0 0% 98%;
    --accent: 20 91% 14%;
    --accent-foreground: 43 96% 56%;
    --destructive: 0 84% 60%;
    --destructive-foreground: 0 85% 97%;
    --border: 0 0% 32%;
    --input: 0 0% 32%;
    --ring: 27 95% 60%;
    --sidebar-background: 30 35% 10%;
    --sidebar-foreground: 0 0% 98%;
    --sidebar-primary: 27 95% 60%;
    --sidebar-primary-foreground: 12 81% 14%;
    --sidebar-accent: 43 96% 56%;
    --sidebar-accent-foreground: 20 91% 14%;
    --sidebar-border: 0 0% 32%;
    --sidebar-ring: 27 95% 60%;
    --chart-1: 30 97% 72%;
    --chart-2: 45 96% 64%;
    --chart-3: 48 96% 76%;
    --chart-4: 27 95% 60%;
    --chart-5: 0 0% 45%;
    --sidebar: 0 0% 14%;
    --shadow-2xs: 0 1px 3px 0px hsl(0 0% 0% / 0.05);
    --shadow-xs: 0 1px 3px 0px hsl(0 0% 0% / 0.05);
    --shadow-sm: 0 1px 3px 0px hsl(0 0% 0% / 0.1), 0 1px 2px -1px hsl(0 0% 0% / 0.1);
    --shadow: 0 1px 3px 0px hsl(0 0% 0% / 0.1), 0 1px 2px -1px hsl(0 0% 0% / 0.1);
    --shadow-md: 0 1px 3px 0px hsl(0 0% 0% / 0.1), 0 2px 4px -1px hsl(0 0% 0% / 0.1);
    --shadow-lg: 0 1px 3px 0px hsl(0 0% 0% / 0.1), 0 4px 6px -1px hsl(0 0% 0% / 0.1);
    --shadow-xl: 0 1px 3px 0px hsl(0 0% 0% / 0.1), 0 8px 10px -1px hsl(0 0% 0% / 0.1);
    --shadow-2xl: 0 1px 3px 0px hsl(0 0% 0% / 0.25);
  }

  .dark[data-palette="sage"] {
    --primary: 75 30% 55%;
    --primary-foreground: 75 40% 12%;
    --accent: 75 25% 18%;
    --accent-foreground: 75 35% 70%;
    --ring: 75 30% 55%;
    --sidebar-primary: 75 30% 55%;
    --sidebar-primary-foreground: 75 40% 12%;
    --sidebar-ring: 75 30% 55%;
  }

  .dark[data-palette="charcoal"] {
    --primary: 0 0% 65%;
    --primary-foreground: 0 0% 10%;
    --accent: 0 0% 16%;
    --accent-foreground: 0 0% 80%;
    --ring: 0 0% 65%;
    --sidebar-primary: 0 0% 65%;
    --sidebar-primary-foreground: 0 0% 10%;
    --sidebar-ring: 0 0% 65%;
  }

  .dark[data-palette="latte"] {
    --primary: 28 35% 65%;
    --primary-foreground: 30 35% 12%;
    --accent: 28 20% 18%;
    --accent-foreground: 28 25% 75%;
    --ring: 28 35% 65%;
    --sidebar-primary: 28 35% 65%;
    --sidebar-primary-foreground: 30 35% 12%;
    --sidebar-ring: 28 35% 65%;
  }

  .dark[data-palette="sand"] {
    --primary: 40 45% 70%;
    --primary-foreground: 38 35% 12%;
    --accent: 40 25% 18%;
    --accent-foreground: 40 30% 78%;
    --ring: 40 45% 70%;
    --sidebar-primary: 40 45% 70%;
