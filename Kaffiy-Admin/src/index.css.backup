@layer base {
  * {
    @apply border-border;
  }

  body {
    @apply bg-background text-foreground font-sans antialiased;
    font-family: 'Inter', system-ui, sans-serif;
  }

  h1, h2, h3 {
    font-family: 'DM Sans', system-ui, sans-serif;
    @apply tracking-tight font-semibold;
  }
}

@layer components {
  .stat-card {
    @apply bg-card rounded-2xl p-6 border border-border/60 transition-all duration-300 ease-out;
    box-shadow: var(--shadow-md);
    background: linear-gradient(135deg, hsl(var(--card)) 0%, hsl(60 50% 99%) 100%);
  }

  .stat-card:hover {
    box-shadow: var(--shadow-lg);
    transform: translateY(-2px);
    border-color: hsl(var(--sage-muted) / 0.5);
  }

  .glass-card {
    @apply rounded-2xl p-6 border border-white/20 backdrop-blur-xl;
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.9) 0%, rgba(255, 255, 255, 0.7) 100%);
    box-shadow: var(--shadow-lg), inset 0 1px 0 0 rgba(255, 255, 255, 0.5);
  }

  .sidebar-link {
    @apply flex items-center gap-3 px-4 py-3.5 rounded-xl text-sidebar-foreground/70 transition-all duration-200 font-medium;
  }

  .sidebar-link:hover {
    @apply bg-sidebar-accent/60 text-sidebar-accent-foreground;
    transform: translateX(4px);
  }

  .sidebar-link-active {
    @apply bg-primary text-primary-foreground shadow-md;
    box-shadow: var(--shadow-md), var(--shadow-glow);
  }

  .sidebar-link-active:hover {
    @apply bg-primary text-primary-foreground;
    transform: translateX(0);
  }

  .campaign-card {
    @apply bg-card rounded-2xl p-5 border border-border/60 transition-all duration-300;
    box-shadow: var(--shadow-sm);
  }

  .campaign-card:hover {
    box-shadow: var(--shadow-md);
    border-color: hsl(var(--sage-muted) / 0.4);
  }

  .reward-card {
    @apply rounded-2xl p-5 border border-border/40 transition-all duration-300;
    background: linear-gradient(145deg, hsl(var(--beige)) 0%, hsl(var(--beige-light)) 100%);
    box-shadow: var(--shadow-sm);
  }

  .reward-card:hover {
    box-shadow: var(--shadow-md);
    transform: translateY(-2px);
  }

  .premium-gradient {
    background: linear-gradient(135deg, hsl(var(--beige-light)) 0%, hsl(var(--background)) 50%, hsl(var(--beige)) 100%);
  }

  .premium-button {
    @apply relative overflow-hidden transition-all duration-300;
    box-shadow: var(--shadow-md);
  }

  .premium-button::before {
    content: '';
    @apply absolute inset-0 opacity-0 transition-opacity duration-300;
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.2) 0%, transparent 50%);
  }

  .premium-button:hover::before {
    @apply opacity-100;
  }

  .premium-button:hover {
    box-shadow: var(--shadow-lg), var(--shadow-glow);
    transform: translateY(-1px);
  }

  .icon-container {
    @apply w-11 h-11 rounded-xl flex items-center justify-center transition-all duration-300;
    background: linear-gradient(145deg, hsl(var(--sage-light)) 0%, hsl(var(--sage-light) / 0.7) 100%);
  }

  .icon-container-gold {
    background: linear-gradient(145deg, hsl(var(--gold-light)) 0%, hsl(var(--gold-light) / 0.7) 100%);
  }

  .icon-container-terracotta {
    background: linear-gradient(145deg, hsl(var(--terracotta-light)) 0%, hsl(var(--terracotta-light) / 0.7) 100%);
  }
}

@layer utilities {
  .text-balance {
    text-wrap: balance;
  }

  .bg-beige {
    background-color: hsl(var(--beige));
  }

  .bg-beige-light {
    background-color: hsl(var(--beige-light));
  }

  .bg-sage {
    background-color: hsl(var(--sage));
  }

  .bg-sage-light {
    background-color: hsl(var(--sage-light));
  }

  .bg-terracotta {
    background-color: hsl(var(--terracotta));
  }

  .bg-terracotta-light {
    background-color: hsl(var(--terracotta-light));
  }

  .bg-gold {
    background-color: hsl(var(--gold));
  }

  .bg-gold-light {
    background-color: hsl(var(--gold-light));
  }

  .text-sage {
    color: hsl(var(--sage));
  }

  .text-sage-dark {
    color: hsl(var(--sage-dark));
  }

  .text-terracotta {
    color: hsl(var(--terracotta));
  }

  .text-gold {
    color: hsl(var(--gold));
  }

  .text-coffee {
    color: hsl(var(--coffee));
  }

  .text-coffee-light {
    color: hsl(var(--coffee-light));
  }

  .border-sage {
    border-color: hsl(var(--sage));
  }

  .gradient-text {
    @apply bg-clip-text text-transparent;
    background-image: linear-gradient(135deg, hsl(var(--sage-dark)) 0%, hsl(var(--sage)) 100%);
  }
}

  .animate-float {
    animation: float 6s ease-in-out infinite;
  }

  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-8px); }
  }
}